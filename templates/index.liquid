<script>
    const hero = document.getElementById('hero');
let isScrolling = false;

document.addEventListener('keydown', (e) => {
  if (isScrolling) return;

  const scrollAmount = window.innerHeight; // 100vh
  let targetScroll = hero.scrollTop;

  if (e.key === 'ArrowDown') {
    targetScroll += scrollAmount;
  } else if (e.key === 'ArrowUp') {
    targetScroll -= scrollAmount;
  } else return;

  // Clamp scroll so we don't go out of bounds
  targetScroll = Math.max(0, Math.min(targetScroll, hero.scrollHeight - hero.clientHeight));

  isScrolling = true;
  hero.scrollTo({ top: targetScroll, behavior: 'smooth' });

  setTimeout(() => isScrolling = false, 700);
});

</script>