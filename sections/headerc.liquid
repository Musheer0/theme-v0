<!-- ================== STYLES ================== -->
<style>
/* ================== STYLES ================== */
#mobile-menu {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 99999999;
  display: flex; /* always flex so opacity can animate */
  flex-direction: column;
  gap: 20px;
  align-items: center;
  background-color: #f1f1f1;
  
  opacity: 0; /* start hidden */
  pointer-events: none; /* prevent clicks when hidden */
  transition: opacity 0.33s ease-in-out;
}

#mobile-menu.active {
  opacity: 1;
  pointer-events: auto; /* allow clicks when visible */
}

.mobile-links{
    display: flex;
    flex-direction: column;
    gap: 10px;
    padding-top: 50px;
    align-items: center;
    justify-content: center;
    font-size: 18px;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: -0.5px;

}
.close-btn-section{
    width: calc(100% - 20px);
    margin-inline: auto;
    height: 80px;
    display: flex;
    align-items: center;
    cursor: pointer;
    font-weight: 400;
    font-size: 13px;
    text-transform: uppercase;
    justify-content: space-between;
}
.logo-txt{
  font-weight: 600;
  font-size: 24;
}
</style>

<!-- ================== MOBILE MENU ================== -->
<div id="mobile-menu" class="mobile-menu">
  <div class="close-btn-section">
    <!-- Close button -->
    <button id="mobile-menu-close" class="no-style"> 
      <img src="{{ 'close.svg' | asset_url }}" class="icon-xl" alt="Close Menu">
    </button>

    <div class="right">
      <!-- Customer links -->
      {% if customer %}
        <a href="/account">My Account</a>
        <a href="/account/logout">Sign out</a>
      {% else %}
        <a href="/account/login">Sign in</a>
      {% endif %}

      <!-- Cart icon with item count -->
      <a href="/cart" class="cart-link" style="position: relative;">
        <img src="{{ 'cart.svg' | asset_url }}" class="icon" alt="Cart">
        {% if cart.item_count > 0 %}
          <span class="cart-count">{{ cart.item_count }}</span>
        {% endif %}
      </a>
    </div>
  </div>

  <!-- Mobile navigation links -->
  <div class="mobile-links">
    {% for link in linklists.main-menu.links %}
      <a href="{{ link.url }}" class="{% if link.active %}active{% endif %}">
        {{ link.title }}
      </a>
    {% endfor %}
  </div>

  <!-- Footer / copyright -->
  <p style="margin-top: auto;">2025 &copy;</p>
</div>

<!-- ================== HEADER ================== -->
<header
  data-scroll 
  data-scroll-fixed 
  data-scroll-target="#scroll-target"
  id="scroll-target"
  class="site-header">
  <nav>
    <h1 class="font-pd logo-txt">
      {{shop.name}}
    </h1>
    <!-- Mobile menu open button -->
    <button id="mobile-menu-open" class="no-style mobile-only"> 
      <img src="{{ 'menu.svg' | asset_url }}" class="icon-xl" alt="Open Menu">
    </button>

    <!-- Desktop main menu links -->
    <div class="main-menu">
      {% for link in linklists.main-menu.links %}
        <a href="{{ link.url }}" class="{% if link.active %}active{% endif %}">
          {{ link.title }}
        </a>
      {% endfor %}
    </div>

    <div class="right">
      <!-- Customer links -->
      {% if customer %}
        <a href="/account">My Account</a>
        <a href="/account/logout">Sign out</a>
      {% else %}
        <a href="/account/login">Sign in</a>
      {% endif %}

      <!-- Cart icon with item count -->
      <a href="/cart" class="cart-link" style="position: relative;">
        <img src="{{ 'cart.svg' | asset_url }}" class="icon" alt="Cart">
        {% if cart.item_count > 0 %}
          <span class="cart-count">{{ cart.item_count }}</span>
        {% endif %}
      </a>
    </div>
  </nav>
</header>

<!-- ================== JS ================== -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menu = document.getElementById('mobile-menu'); // mobile menu container
    const openBtn = document.getElementById('mobile-menu-open'); // open button
    const closeBtn = document.getElementById('mobile-menu-close'); // close button

    // Open menu on button click
    openBtn.addEventListener('click', () => menu.classList.add('active'));

    // Close menu on button click
    closeBtn.addEventListener('click', () => menu.classList.remove('active'));
  });
</script>

<!-- ================== SCHEMA ================== -->
{% schema %}
{
  "name": "header",
  "settings": []
}
{% endschema %}
